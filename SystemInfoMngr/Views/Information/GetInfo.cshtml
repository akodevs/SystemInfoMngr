@model SystemInfoMngr.Models.InformationModel
@{
    ViewData["title"] = "Get Info";
}


<h2>Systeminformation fo: @Html.DisplayFor(model => model.InfoTitle)</h2>

<div>
    <hr/>
    <dl class="dl-horizontal">
        <dt> Operating System </dt>
        <dd>@Html.DisplayFor(model => model.OperatingSystem)</dd>
        
        <dt> Framework Description </dt>
        <dd>@Html.DisplayFor(model => model.FrameworkDescription)</dd>
        
        <dt> Process Architechture </dt>
        <dd>@Html.DisplayFor(model => model.ProcessArchitecture)</dd>

        
        <dt> Public IP </dt>
        <dd>@Html.DisplayFor(model => model.IPAddressString)</dd>
    </dl>
</div>

<h2>
    Current Location: @Html.DisplayFor(model => model.CurrentCity)
</h2>
<div style="float: left">
    @Html.Raw(Model.CurrentIcon)

    <div>
        <h3>
        @Model.CurrentTemperature&deg; @Model.UnitOfMeasure
        </h3>
    </div>
    
    <div>
        <h4>@Html.DisplayFor(model => model.DailySummary)</h4>
    </div>
    <div>
        Weather Info: @Html.DisplayFor(model => model.WheatherBy) 
    </div>
</div>